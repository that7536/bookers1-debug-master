<!DOCTYPE html>
<html>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle= "collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to 'Home', user_path(current_user.id), class:"fas fa-home" %>
                </li>
                <li>
                  <%= link_to 'Users', users_path, class:"fas fa-users" %>
                </li>
                <li>
                  <%= link_to 'Books', books_path, class:"fas fa-book-open" %>
                </li>
                <li>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home", root_path, class:"fas fa-home bav-link text-light" %>
                </li>
                <li>
                  <%= link_to "About", home_about_path, class:"fas fa-link nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "Sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-light" %>
                <li>
                  <%= link_to "Log in", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <title>Bookers2</title>
      <%= csrf_meta_tags %>

      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </header>

    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="controller mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
